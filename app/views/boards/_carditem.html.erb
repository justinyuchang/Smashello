<div class="modal fade" id="Carditem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content col pt-3 px-1 text-secondary">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <i class="far fa-window-maximize"></i>
            <h5 data-role="card-inner_title" class="d-inline-block mb-3 ml-1 font-weight-bold text-dark"></h5>
            <span data-role="card-focus-id" class="d-none"></span>
          </div>
        </div>
        <div class="row">
          <div class="col-9">
            <div class="form-group">
              <div class="assignee-list">
                <div class="assignee"></div>
              </div>
              <i class="fas fa-align-left"></i>
              <label class="ml-1 text-dark" for="card-description">Description</label>
              <textarea data-role="card-description" type="text" class="form-control" id="card-description" placeholder="Add more detail..."></textarea>
            </div>
            <!-- Comment Area -->
            <div class="form-group">
              <textarea data-role="comment-input" class="form-control" placeholder="Write a comment..."></textarea>
              <button data-role="comment-send" type="submit" class="btn btn-sm btn-primary mt-1">Send</button>
            </div>

            <div data-role="comment-area">
              <div class="bg-light mb-1"></div>
            </div>
          </div>


          <!-- Side Bar -->
          <div class="col-3">
            <span class="text-muted small">Add to card</span>
            <div class="dropdown mr-1">
              <button type="button" class="btn btn-sm btn-light text-primary mx-1 dropdown-toggle" id="dropdownMenuOffset"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-offset="10,20">
                    Member
               </button>
               <ul class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                 <% @board.users.each do |member| %>
                   <li class="dropdown-item">
                     <span data-memberId="<%= member.id %>"><%= member.email %></span>
                     <!-- <%= link_to member.email, 'assign_card_path', method: :put, data: { memberId: member.id}, remote: true %> -->
                     <!-- <%= link_to member.email, '###', method: :put, class: 'assign_card_path', data: { 'path-tpl': assign_card_path(id: 'CARD_ID', user_id: member.id), memberId: member.id } %> -->
                   </li>
                 <% end %>
               </ul>
            </div>

            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Tags</span>
              </div>
              <input data-role="card-tags" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group-sm">
              <label for="card-due-date">Due date</label>
              <input data-role="card-due-date" type="date" class="form-control" id="card-due-date">
            </div>

            <!-- <div class="form-group">
              <label for="card-archived">card-archived</label>
              <select data-role="card-archived" id="card-archived" class="form-control">
                <option selected>true</option>
                <option>false</option>
              </select>
            </div> -->

          </div>
          
        </div>
      </div>
      <div class="form-group d-flex justify-content-end">
        <button data-role="card-update" type="submit" class="btn btn-primary">儲存</button>
      </div>      
    </div>
  </div>
</div>